<% include ../partials/header.ejs %>

<main class="container">
    <h1>Surveys</h1>
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="/survey/add" title="Add Survey"><i class="fa fa-plus-circle"></i> Add a new Survey</a>
        </div> <!-- panel-heading -->
        <% if (Surveys.length < 0) { %>
        <div class="panel-body table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Survey Name</th>
                        <th>Question1</th>
                        <th>Question2</th>
                        <th>Question3</th>
                        <th>Question4</th>
                        <th>Question5</th>
                        <th></th>
                    </tr>
                </thead>
                </tbody>
                <% for (var i = 0; i < Surveys.length; i++) { %>
                <tr>
                    <td>
                        <%= Surveys[i].survey_name %>
                    </td>
                    <td>
                        <%= Surveys[i].question_1 %>
                    </td>
                    <td>
                        <%= Surveys[i].question_2 %>
                    </td>
                    <td>
                        <%= Surveys[i].question_3 %>
                    </td>
                    <td>
                        <%= Surveys[i].question_4 %>
                    </td>
                    <td>
                        <%= Surveys[i].question_5 %>
                    </td>

                    <td>
                        <a href="/survey/<%= Surveys[i]._id %>" title="Edit" class="btn btn-primary">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        <a href="/survey/delete/<%= Surveys[i]._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>   
                </tr>
                <% } %>
                </tbody>
            </table>
        </div> <!-- panel-body -->
        <% } %>
    </div><!-- panel panel-default -->

</main>
<% include ../partials/footer.ejs %>